<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash screen theme -->
    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Устанавливаем цвета статус-бара для LaunchTheme -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <!-- Для Android 12+ -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/launch_background</item>
        <item name="android:windowSplashScreenBackground">@color/primary_dark</item>
        <item name="android:windowSplashScreenAnimationDuration">300</item>
    </style>
    
    <!-- Main application theme (для API < 31) -->
    <style name="NormalTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        
        <!-- Цвета навигации и статус-бара -->
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Material Design Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorOnPrimary">@color/text_light</item>
        <item name="colorOnSecondary">@color/text_light</item>
        <item name="android:colorBackground">@color/background</item>
        
        <!-- Настройки отображения -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        
        <!-- Для корректной работы с клавиатурой -->
        <item name="android:windowSoftInputMode">adjustResize</item>
        
        <!-- Material Design 2 компоненты -->
        <item name="buttonStyle">@style/WhatsAppButton</item>
        <item name="materialButtonStyle">@style/WhatsAppButton</item>
    </style>
    
    <!-- Стиль для кнопок WhatsApp -->
    <style name="WhatsAppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- Цвета WhatsApp (ДОБАВЬТЕ недостающие цвета) -->
    <color name="primary">#075E54</color>
    <color name="primary_dark">#054D44</color>
    <color name="primary_light">#128C7E</color>
    <color name="accent">#25D366</color>
    <color name="background">#ECE5DD</color>
    <color name="message_sent">#DCF8C6</color>
    <color name="message_received">#FFFFFF</color>
    <color name="text_primary">#000000</color>
    <color name="text_secondary">#667781</color>
    <color name="text_light">#FFFFFF</color> <!-- ДОБАВЬТЕ ЭТОТ ЦВЕТ! -->
    <color name="text_hint">#9AA6AC</color> <!-- ДОБАВЬТЕ ЭТОТ ЦВЕТ! -->
    <color name="divider">#E0E0E0</color>
    
    <!-- Цвета для уведомлений -->
    <color name="notification_icon">#FFFFFF</color>
    <color name="notification_color">#25D366</color>
    
    <!-- Цвета для темной темы (опционально) -->
    <color name="dark_background">#121212</color>
    <color name="dark_card">#1F2C34</color>
    <color name="dark_text_primary">#E9EDEF</color>
    <color name="dark_text_secondary">#8696A0</color>
</resources>